{% extends "admin_layout.twig" %}

{% block content %}
    <ul>
    {% for item in modifList %}
        <li>
            <a href="{{ path('admin_revision', { 'revID' : item.id }) }}">Preview ID#{{ item.id }}</a> - 
            <a href="{{ path('admin_revision_delete', { 'revID' : item.id }) }}">delete</a>
        </li>
    {% endfor %}
    </ul>
    
    {% if modifList is empty %}
    <p>No modification in the pending queue.</p>
    {% endif %}
    
{% endblock %}
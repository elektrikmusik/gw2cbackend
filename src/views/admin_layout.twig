{% extends "layout.twig" %}

{% block title %}{% endblock %}

{% block assets %}
<script src="//ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js"></script>
<script>window.jQuery || document.write('<script src="assets/javascripts/libs/jquery.js"><\/script>')</script>

<!-- ugly as hell, will be improved -->
<style>
    div.fieldset { display: none; }
    div.marker-group { margin: 50px 0; }
    div.marker-type { margin: 15px 0 15px 50px; }
</style>
{% endblock %}  

{% block menu %}
<div id="menu">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container">
                <ul class="nav">
                    <li><a href="{{ path('admin') }}">Home</a></li>
                    <li><a href="{{ path('admin_organize') }}">Organize</a></li>
                    <li{% if (section is defined ) and (section == "areas")%} class="disabled" {% endif %}><a href="{{ path('admin_areas') }}">Manage Areas</a></li>
                    <li><a href="{{ path('admin_options') }}">Options</a></li>
                    <li>{% if is_granted('ROLE_SUPER_ADMIN') %}</li>
                    <li><a href="{{ path('admin_users') }}">Users management</a></li>
                    <li>{% endif %}</li>
                    <li class="pull-right"><a href="{{ path('admin_logout') }}">Logout</a></li>
                </ul>
            </div>
        </div>
    </div>
</ul>
{% endblock %}
